//Circle area

namespaceDeclaringConstants{
classProgram{
staticvoidMain(string[]args){
constdouble pi =3.14159;

// constantdeclaration
double r;
Console.WriteLine("EnterRadius: ");
         r =Convert.ToDouble(Console.ReadLine());

doubleareaCircle= pi * r * r;
Console.WriteLine("Radius: {0}, Area: {1}",r,areaCircle);
Console.ReadLine();
}
}
}
